<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#CCF70026"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <RelativeLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
<!--&lt;!&ndash;                <com.facebook.drawee.view.SimpleDraweeView&ndash;&gt;-->
<!--&lt;!&ndash;                    android:id="@+id/img1"&ndash;&gt;-->
<!--&lt;!&ndash;                    android:layout_width="340dp"&ndash;&gt;-->
<!--&lt;!&ndash;                    android:layout_height="130dp"&ndash;&gt;-->
<!--&lt;!&ndash;                    fresco:failureImage="@drawable/error"&ndash;&gt;-->
<!--&lt;!&ndash;                    fresco:actualImageScaleType="focusCrop"&ndash;&gt;-->
<!--&lt;!&ndash;                    fresco:progressBarImage="@drawable/loading"/>&ndash;&gt;-->
<!--                    -->
<!--            </RelativeLayout>-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/teamjersey"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                fresco:failureImage="@drawable/error"
                fresco:actualImageScaleType="focusCrop"
                android:elevation="10dp"
                fresco:progressBarImage="@drawable/loading"/>
<!--        <ImageView-->
<!--            android:layout_width="130dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:scaleType="fitXY"-->
<!--            android:id="@+id/teamjersey"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/teamname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Title"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/teamimg"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    fresco:failureImage="@drawable/error"
                    fresco:actualImageScaleType="focusCrop"
                    android:elevation="10dp"
                    fresco:progressBarImage="@drawable/loading"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>